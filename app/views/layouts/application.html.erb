<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="keywords" content="<%= @seo_keywords %>" />

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <div>
      <div> <%= link_to "Home", root_path %> </div>
      <div> <%= link_to "About", about_path %> </div>
      <div> <%= link_to "Contact", contact_path %> </div>
      <div> <%= link_to "Blogs", blogs_path %> </div>
      <div> <%= link_to "Portfolios", portfolios_path %> </div>
    </div>

    <% if current_user.is_a?(User) %>
      <%= button_to "Logout", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to "Login", new_user_session_path %> | <%= link_to "Register", new_user_registration_path %>
    <% end %>

    <%= yield %>

    <% if session[:source] %>
      <h4> Thanks for visiting me from <%= session[:source] %> </h4>
    <% end %>
  </body>
</html>
