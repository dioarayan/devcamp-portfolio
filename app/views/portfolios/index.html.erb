<h1> My Portfolio </h1>

<% @portfolio_items.each do |item| %>
  <div>
    <h2><%= item.title %></h2>
    <p><%= item.subtitle %></p>
    <p><%= item.body %></p>
    <%= image_tag item.main_image if item.main_image.present? %>
    <%= image_tag item.thumb_image if item.thumb_image.present? %>
  </div>
<% end %>
