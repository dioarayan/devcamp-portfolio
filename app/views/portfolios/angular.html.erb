<h1> Angular Portfolio Items </h1>

<%= link_to "Create New Item", new_portfolio_path  if logged_in?(:site_admin) %>

<%= @angular_portfolio_items.each do |item| %>
  <div>
    <h2><%= link_to item.title, portfolio_show_path(item) %></h2>
    <p><%= item.subtitle %></p>
    <p><%= item.body %></p>
    <%= image_tag item.main_image if item.main_image.present? %>
    <%= image_tag item.thumb_image if item.thumb_image.present? %>
    <%= link_to "Edit", edit_portfolio_path(item) if logged_in?(:site_admin) %>
    <%= button_to "Delete", portfolio_path(item), method: :delete, 
        data: { turbo_confirm: 'Are you sure?'}  if logged_in?(:site_admin) %>
  </div>
<% end %>
