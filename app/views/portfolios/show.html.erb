<%= image_tag @portfolio_item.thumb_image if @portfolio_item.thumb_image.present? %>
<%= image_tag @portfolio_item.main_image if @portfolio_item.main_image.present? %>
<h1><%= @portfolio_item.title %></h1>
<p><%= @portfolio_item.subtitle %></p>
<p><%= @portfolio_item.body %></p>

<h2> Technologies </h2>

<% @portfolio_item.technologies.each do |technology| %>
  <p><%= technology.name %></p>
<% end %>

<%= link_to "Back to Portfolio", portfolios_path %>
