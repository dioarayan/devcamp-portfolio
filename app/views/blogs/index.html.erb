<p style="color: green"><%= notice %></p>

<h1>Blogs</h1>

<div id="blogs">
  <% @blogs.each do |blog| %>
    <div class=title>
      <h2><%= blog.title %></h2>
    </div>
    <div class=body>
      <p><%= blog.body %></p>
    </div>
    <div class=status>
      <p> <%= link_to blog.status, toggle_status_blog_path(blog) %></p>
    </div>
    <p>
      <%= link_to "Show this blog", blog %>
    </p>
  <% end %>
</div>

<%= link_to "New blog", new_blog_path %>
